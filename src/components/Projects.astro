---
import { projects } from "../data/projects";
import ProjectCard from "./ProjectCard.astro";
---

<section class="flex items-center justify-center py-20 snap-center" id="projects">
	<div class="container m-4">
		<div class="flex flex-col">
			<h2 class="font-bold text-4xl">Proyectos</h2>
			<div class="pt-10">
				<div class="grid grid-cols-1 gap-10 md:grid-cols-2">
					{
						projects.map(project => <ProjectCard {...project}/>)
					}
				</div>
			</div>
			<div class="flex justify-center pt-12 w-full">
				<a class="border-b border-slate-500 duration-300 font-semibold text-lg transition-colors hover:border-current cursor-pointer" href="https://github.com/gsabik?tab=repositories" target="_blank">Ver m√°s</a>
			</div>
		</div>
	</div>
</section>